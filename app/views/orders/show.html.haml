%main.container.general-main-wrap
  %h1.general-title-margin= 'Order ' + @order.order_number
  .row.mb-20
    .col-sm-3
      = render 'checkouts/short_address', object: @shipping_address
    .col-sm-3
      = render 'checkouts/short_address', object: @billing_address
    .col-sm-3
      %h3.general-subtitle Shipments
      %p.general-address
        = @shipping.product.title
        %br
        = @shipping.product.description
    .col-sm-3
      %h3.general-subtitle Payment Information
      %p.general-address
        = @payment.four_numbers_of_card
        %br
        = @payment.mm_yy
  .visible-xs
    = render 'order_items/order_items_v_xs'
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        = render 'order_items/order_items_h_xs'
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'orders/order_total_panel'
