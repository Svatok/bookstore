.hidden-xs.hidden-sm
  .row
    .col-md-5
      %h3.general-subtitle Billing Address
      %p.general-info-text all fields are required
    .col-md-5.col-md-offset-1
      %h3.general-subtitle Shipping Address
.row
  .col-md-5.mb-40
    = render 'addresses/forms', object: @billing_address_form, address_type: 'billing'
  .col-md-5.col-md-offset-1.mb-60
    = render 'addresses/forms', object: @shipping_address_form, address_type: 'shipping'
    .form-group.checkbox
      %label.font-weight-light.pl-0
        %input.checkbox-input{type: "checkbox", hidden: "true"}
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Use Billing Adress
