<!DOCTYPE html>
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %title Bookstore
    = csrf_meta_tags
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600", rel: "stylesheet"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => "reload"
    = javascript_include_tag "application", "data-turbolinks-track" => "reload"

  %body
    %header.navbar.navbar-default.mb-0
      .container
        .navbar-header
          %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: root_path} Bookstore
          %a.shop-link.pull-right.visible-xs{href: cart_path}
            %span.shop-icon
              %span.shop-quantity= current_order.order_items.only_products.count
        %a.shop-link.pull-right.hidden-xs{href: cart_path}
          %span.shop-icon
            %span.shop-quantity= current_order.order_items.only_products.count
        #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
          .visible-xs
            %button.close{type: "button", 'aria-label': "Close"}
              %span{'aria-hidden': "true"} &times;
            %ul.nav.navbar-nav
              %li
                %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Home
                %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                  - @categories.each do |category|
                    %li
                      %a.collapse-link{href: root_path(:category => category)}= category.name
              %li
                %a{href: products_path} Shop
              - if signed_in?
                %li
                  %a{type: "button", 'data-toggle': "collapse", href: "#menu_account", 'aria-expanded': "false", 'aria-controls': "menu"} My account
                  %ul#menu_account.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                    %li
                      %a.collapse-link{href: orders_path} Orders
                    %li
                      %a.collapse-link{href: edit_user_registration_path} Settings
                %li
                  %a{href: destroy_user_session_path, method: :delete} Log out
              - else
                %li
                  %a{href: new_user_session_path} Log in
                %li
                  %a{href: new_user_registration_path} Sign up
          .hidden-xs
            %ul.nav.navbar-nav
              %li
                %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Home
                %ul.dropdown-menu
                  - @categories.each do |category|
                    %li
                      %a{href: root_path(:category => category)}= category.name
              %li.dropdown
                %a{href: products_path} Shop
              - if signed_in?
                %li.dropdown
                  %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
                  %ul.dropdown-menu
                    %li
                      %a{href: orders_path} Orders
                    %li
                      %a{href: edit_user_registration_path} Settings
                    %li.divider{role: "separator"}
                    %li
                      %a{href: destroy_user_session_path, method: :delete} Log out
              - else
                %li
                  %a{href: new_user_session_path} Log in
                %li
                  %a{href: new_user_registration_path} Sign up
    = yield
    %p.notice= notice
    %p.alert= alert
    %footer.navbar.navbar-inverse.mb-0
      .container
        .row
          .col-sm-9
            %ul.list-inline.general-align.mb-25
              %li
                %a.nav-link{href: root_path} Home
              %li
                %a.nav-link{href: products_path} Shop
              - if signed_in?
                %li
                  %a.nav-link{href: "#"} Orders
                %li
                  %a.nav-link{href: edit_user_registration_path} Settings
          .col-sm-3
            %p.general-nav-mail support@bookstore.com
            %p.general-nav-number (555)-555-5555
            %ul.list-inline.general-align
              %li
                %a.nav-link{href: user_facebook_omniauth_authorize_path}
                  %i.fa.fa-facebook{'aria-hidden': "true"}
              %li
                %a.nav-link{href: user_twitter_omniauth_authorize_path}
                  %i.fa.fa-twitter{'aria-hidden': "true"}
              %li
                %a.nav-link{href: user_google_oauth2_omniauth_authorize_path}
                  %i.fa.fa-google-plus{'aria-hidden': "true"}
              %li
                %a.nav-link{href: user_instagram_omniauth_authorize_path}
                  %i.fa.fa-instagram{'aria-hidden': "true"}
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
