%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators.general-carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
    .carousel-inner{role: "listbox"}
      - @lattest_products.each_with_index do |product, i|
        .item{:class => ("active" if i == 0)}
          .row
            .col-sm-5
              .general-img-wrap
                - img_path = product.pictures.present? ? "#{product.pictures.first.image_path}" : "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"
                %img.img-shadow.general-thumbnail-img.width-full{src: "#{img_path}", alt: "design-book"}
            .col-sm-7
              .mb-60
                %h1= product.title
                %p.lead= product.description
                %p.in-grey-600.small= ProductDecorator.new(product).all_authors
                .general-align.pt-20
                  %button.btn.btn-primary Buy Now
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p.in-grey-600 We pore through hundreds of new books each month and select the five best we can find to share with our members.
    = link_to 'Get Started', products_path, class: 'btn btn-default' 
  .mb-35
    %h3 Best Sellers
    .row
      - @best_sellers.each do |product|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              - img_path = product.pictures.present? ? "#{product.pictures.first.image_path}" : "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"
              %img.img-shadow.general-thumbnail-img{src: "#{img_path}", alt: "design-book"}
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: product_path(product)}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  %a.thumb-hover-link{href: "#"}
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              - price = product.prices.present? ? product.prices.actual.first.value : 0
              %p.pull-right.font-16.in-gold-500= number_to_currency(price,:unit=>'â‚¬')
              %p.general-title.mr-55= product.title
            %span.divider-sm
            %p.in-grey-600.small= ProductDecorator.new(product).all_authors
